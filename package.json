{
  "name": "sela",
  "version": "2.0.0",
  "description": "Autonomous AI agent for WhatsApp",
  "main": "index.js",
  "engines": {
    "node": ">=22"
  },
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "setup": "node setup.js",
    "start": "node index.js",
    "test": "node test/run-all.js",
    "dashboard": "node dashboard.js",
    "check": "node -e \"const{readdirSync:r}=require('fs'),{spawnSync:s}=require('child_process'),{join:j}=require('path');let ok=1;for(const f of r('lib').filter(f=>f.endsWith('.js'))){const p=j('lib',f);const x=s(process.execPath,['--check',p],{encoding:'utf8'});if(x.status){console.error('FAIL:',p,x.stderr.trim());ok=0;}}ok?console.log('All files OK'):process.exit(1);\""
  },
  "keywords": [
    "whatsapp",
    "ai-agent",
    "claude",
    "autonomous"
  ],
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.77.0",
    "@hapi/boom": "^10.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@tobilu/qmd": "^1.0.7",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "better-sqlite3": "^12.6.2",
    "croner": "^10.0.1",
    "dotenv": "^17.3.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0"
  }
}
